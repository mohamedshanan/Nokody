<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_error_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/layout_error_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:lines="1"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:text="This is error message, place yours here" />

    <ImageView
        android:id="@+id/layout_error_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        tools:background="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/layout_error_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:text="This is error message, place yours here" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/layout_error_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="4dp"
        android:visibility="gone" />
</LinearLayout>